<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- Background color -->
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent for the inner circle -->
            <stroke android:width="2dp" android:color="@color/colorRed" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>